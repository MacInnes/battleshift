<!DOCTYPE html>
<html>
  <head>
    <title>BattleshipWeb</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <section>
      <% flash.each do |type, message| %>
        <%= content_tag :div, message.html_safe, class: type %>
      <% end %>
    </section>
    <%= yield %>
  </body>
</html>
